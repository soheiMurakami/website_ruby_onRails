<% title "Sign up" %>

<%= bootstrap_form_with(model: @viewer, local: true) do |f| %>
    <%= f.alert_message "Please fix the error below.", error_summary: false %>
    <%= f.text_field :name %>
    <%= f.text_field :email %>
    
    
    <% if @viewer.has_password? %>
        <%= f.password_field :password %>
        <%= f.password_field :password_confirmation %>
    <% end %>
    <%= f.primary "Sign up" %>
<% end %>

<%= link_to "Sign up with Github", "/auth/github" %>