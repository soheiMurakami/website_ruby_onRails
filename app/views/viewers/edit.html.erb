<% title "Edit Account" %>

<%= bootstrap_form_with(model: @viewer, local: true) do |f| %>
    <%= f.alert_message "Please fix the error below.", error_summary: false %>
    <%= f.text_field :name %>
    <%= f.text_field :email %>
    <% if @viewer.has_password? %>
        <%= f.password_field :current_password, label: "Current Password", help: "Required for any account chnges." %>
    <% end %>
    <%= f.password_field :password, label: "New Password", help: "Leave blank to keep current psword" %>
    <%= f.password_field :password_confirmation %>
    <%= f.primary "Sign up" %>
<% end %>