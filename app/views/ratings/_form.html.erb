<%= bootstrap_form_with(model: @rating, local: true) do |f| %>
    <%= f.alert_message "Fix the errors below", error_summary: false %>
    <%= f.text_field :title, placeholder: 'title' %>
    <%= f.number_field :rating, placeholder: 'rating' %>
    <%= f.text_field :description, placeholder: 'description' %>
    
    <%= f.submit @rating.persisted? ? "Update Rating" : "Create Rating" %>
<% end %>